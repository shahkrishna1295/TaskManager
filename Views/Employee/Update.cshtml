@model TaskManager.Models.Employee
@{
    ViewBag.Title = "Update";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<h2>Update Employee</h2>
<div class="navbar">
    <a class="navlink" href="/Employee/List">Back to list</a>
</div>
<div>
    <form action="/Employee/Update/@Model.EmployeeId" method="post">
        <div>
            <label>First Name : </label>
            <input type="text" id="firstname" name="firstname" value="@Model.FirstName" />
        </div>

        <div>
            <label>Last Name : </label>
            <input type="text" id="lastname" name="lastname" value="@Model.LastName" />
        </div>

        <div>
            <label>Email Address : </label>
            <input type="email" id="email" name="email" value="@Model.Email" />
        </div>

        <div>
            <label>Address : </label>
            <input type="text" id="address" name="address" value="@Model.Address" />
        </div>

        <div>
            <label>Phone : </label>
            <input type="text" id="phone" name="phone" value="@Model.Phone" />
        </div>

        <div>
            <label>Join Date : </label>
            <input type="date" id="joindate" name="joindate" value="@Model.JoinDate" />
        </div>

        <div style="display:none">
            <label>Company : </label>
            <input type="text" id="companyid" name="companyid" value="1" />
        </div>

        <div>
            <input type="submit" value="Save" />
        </div>
    </form>
</div>

